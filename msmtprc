defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.config/neomutt/.msmtp.log

# Zoho account
account zoho
host smtp.zoho.com
port 465
user aj.vazquez@zoho.com
from aj.vazquez@zoho.com
tls_starttls off
# passwordeval "gpg -q --for-your-eyes-only --no-tty --decrypt ~/.config/neomutt/accounts/zoho.password.gpg" */
passwordeval "cat ~/.config/neomutt/accounts/zoho.pass"

# Gmail account
account gmail
host smtp.gmail.com
port 465
user beto.v25@gmail.com
from beto.v25@gmail.com
tls_starttls off
# passwordeval "gpg -q --for-your-eyes-only --no-tty --decrypt ~/.config/neomutt/accounts/gmail.password.gpg" */
passwordeval "cat ~/.config/neomutt/accounts/gmail.pass"

# Supmoldie account
account supmoldie
host gator3197.hostgator.com
port 465
user a.vazquez@supmoldie.com
from a.vazquez@supmoldie.com
tls_starttls off
# passwordeval "gpg -q --for-your-eyes-only --no-tty --decrypt ~/.config/neomutt/accounts/supmoldie.password.gpg"
passwordeval "cat ~/.config/neomutt/accounts/supmoldie.pass"

# Default account
account default : zoho
