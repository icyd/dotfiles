## Account settings

# Default options
set from = "aj.vazquez@zoho.com"
set sendmail = "/usr/bin/msmtp -a zoho"
color status blue default

# Default inbox
set spoolfile = "+zoho/INBOX"

# Mailboxes to show in the sidebar
mailboxes   +zoho/INBOX \
            +zoho/drafts \
            +zoho/sent \
            +zoho/archive \
            +zoho/junk \
            +zoho/trash \

# Other special folders
set mbox = "+zoho/archive"
set postponed = "+zoho/drafts"
unset record

# Other options
set signature = "~/.config/neomutt/accounts/default.sig"
set crypt_autosign

# GPG options
source "~/.config/neomutt/gpg.rc"

# Macros
macro index o "<shell-escape>mbsync zoho;/home/beto/.local/bin/mailntag<enter>" "run mbsync to sync inbox"
macro index D "<save-message>+zoho/trash<enter>" "move message to trash"
macro index S "<save-message>+zoho/junk<enter>" "mark message as spam"
macro index ,mrr '<enter-command>my_hdr Return-Receipt-To: aj.vazquez@zoho.com<Enter><enter-command>echo "Set Return-Receipt-To: aj.vazquez@zoho.com"<enter>' "Set RRT header"
