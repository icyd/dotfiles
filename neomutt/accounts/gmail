## Account settings

# Default options
set from = "beto.v25@gmail.com"
set sendmail = "/usr/bin/msmtp -a gmail"
color status green default

# Default inbox
set spoolfile = "+gmail/INBOX"

# Mailboxes to show in the sidebar
mailboxes   +gmail/INBOX \
mailboxes   +gmail/starred \
            +gmail/drafts \
            +gmail/sent \
            +gmail/allmail \
            +gmail/junk \
            +gmail/trash \

# Other special folders
set mbox = "+gmail/archive"
set postponed = "+gmail/drafts"
unset record

# Signature
set signature = "~/.config/neomutt/accounts/default.sig"

# GPG sign
unset crypt_autosign

# Macros
macro index o "<shell-escape>mbsync gmail;/home/beto/.local/bin/mailntag<enter>" "run mbsync to sync inbox"
macro index D "<save-message>+gmail/trash<enter>" "move message to trash"
macro index S "<save-message>+gmail/junk<enter>" "mark message as spam"
macro index ,mrr '<enter-command>my_hdr Return-Receipt-To: beto.v25@gmail.com<Enter><enter-command>echo "Set Return-Receipt-To: beto.v25@gmail.com"<enter>' "Set RRT header"
