#################################
########  Zoho mailbox   ########
#################################

IMAPAccount zoho
Host imap.zoho.com
User aj.vazquez@zoho.com
# PassCmd "gpg -q --for-your-eyes-only --no-tty -d ~/.config/neomutt/accounts/zoho.password.gpg"
PassCmd "cat ~/.config/neomutt/accounts/zoho.pass"
SSLType IMAPS
CertificateFile /etc/ssl/certs/ca-certificates.crt

# Remote storage
IMAPStore zoho-remote
Account zoho

# Local storage
MaildirStore zoho-local
Path ~/.mailboxes/zoho/
Inbox ~/.mailboxes/zoho/INBOX

Channel zoho-inbox
Master :zoho-remote:"Inbox"
Slave :zoho-local:INBOX
Create Both
Expunge Both

Channel zoho-notification
Master :zoho-remote:"Notification"
Slave :zoho-local:notification
Create Both
Expunge Both

Channel zoho-archive
Master :zoho-remote:"Archive"
Slave :zoho-local:archive
Create Both
Expunge Both

Channel zoho-drafts
Master :zoho-remote:"Drafts"
Slave :zoho-local:drafts
Create Both
Expunge Both

Channel zoho-sent
Master :zoho-remote:"Sent"
Slave :zoho-local:sent
Create Both
Expunge Both

Channel zoho-trash
Master :zoho-remote:"Trash"
Slave :zoho-local:trash
Create Both
Expunge Both

Channel zoho-junk
Master :zoho-remote:"Spam"
Slave :zoho-local:junk
Create Both
Expunge Both

Group zoho
Channel zoho-inbox
Channel zoho-notification
Channel zoho-archive
Channel zoho-drafts
Channel zoho-sent
Channel zoho-trash
Channel zoho-junk

#################################
########  Gmail mailbox   #######
#################################

IMAPAccount gmail
Host imap.gmail.com
User beto.v25@gmail.com
# PassCmd "gpg -q --for-your-eyes-only --no-tty -d ~/.config/neomutt/accounts/gmail.password.gpg"
PassCmd "cat ~/.config/neomutt/accounts/gmail.pass"
SSLType IMAPS

# Remote storage
IMAPStore gmail-remote
Account gmail

# Local storage
MaildirStore gmail-local
Path ~/.mailboxes/gmail/
Inbox ~/.mailboxes/gmail/INBOX

Channel gmail-inbox
Master :gmail-remote:
Slave :gmail-local:
Pattern "INBOX"
Create Both
Expunge Both

Channel gmail-starred
Master :gmail-remote:"[Gmail]/Starred"
Slave :gmail-local:starred
Create Both
Expunge Both

Channel gmail-allmail
Master :gmail-remote:"[Gmail]/All Mail"
Slave :gmail-local:allmail
Create Both
Expunge Both

Channel gmail-drafts
Master :gmail-remote:"[Gmail]/Drafts"
Slave :gmail-local:drafts
Create Both
Expunge Both

Channel gmail-sent
Master :gmail-remote:"[Gmail]/Sent Mail"
Slave :gmail-local:sent
Create Both
Expunge Both

Channel gmail-trash
Master :gmail-remote:"[Gmail]/Trash"
Slave :gmail-local:trash
Create Both
Expunge Both

Channel gmail-junk
Master :gmail-remote:"[Gmail]/Spam"
Slave :gmail-local:junk
Create Both
Expunge Both

Group gmail
Channel gmail-inbox
Channel gmail-starred
Channel gmail-drafts
Channel gmail-sent
Channel gmail-allmail
Channel gmail-trash
Channel gmail-junk

