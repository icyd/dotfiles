### Variables
set $mod Mod4
set $alt Mod1
set  $left   h
set  $down   j
set  $up     k
set  $right  l
set $term alacritty
set $browser firefox
set $menu wofi
set $clipmanager clipman pick -t $menu
set  $ws1   "1"
set  $ws2   "2"
set  $ws3   "3"
set  $ws4   "4"
set  $ws5   "5"
set  $ws6   "6"
set  $ws7   "7"
set  $ws8   "8"
set  $ws9   "9"
set  $ws10  "10"

## Base16 Gruvbox dark, medium
# Author: Dawid Kurek (dawikur@gmail.com), morhetz (https://github.com/morhetz/gruvbox)
set $base00 #282828
set $base01 #3c3836
set $base02 #504945
set $base03 #665c54
set $base04 #bdae93
set $base05 #d5c4a1
set $base06 #ebdbb2
set $base07 #fbf1c7
set $base08 #fb4934
set $base09 #fe8019
set $base0A #fabd2f
set $base0B #b8bb26
set $base0C #8ec07c
set $base0D #83a598
set $base0E #d3869b
set $base0F #d65d0e

# Setup of colors
set $darkblack      $base00
set $black          $base03
set $darkred        $base08
set $red            $base09
set $darkgreen      $base0B
set $green          $base01
set $darkblue       $base0D
set $blue           $base04
set $darkmagenta    $base0E
set $magenta        $base06
set $darkcyan       $base0C
set $cyan           $base0F
set $darkwhite      $base05
set $white          $base07
set $transparent    #00000000

set $dmenuopts -b -f -i --tb "$darkblack" --tf "$darkwhite" --fb "$darkblack" --ff "$darkwhite" --nb "$darkblack" --nf "$darkwhite" --hb "$darkblack" --hf "$darkred" --scb "$darkblack" --scf "$darkwhite" --fn "MesloLGS NF-9"
set $dmenu bemenu-run -p "$" $menuopts | xargs swaymsg exec

### Output configuration
output * background ~/.wallpaper.jpg fill

set $m_laptop eDP-1
# output $laptop pos 0 0 res 1366x768
# output HDMI-A-1 pos 1366 0 res 1920x1080

# bindswitch --reload --locked lid:on output $m_laptop disable
